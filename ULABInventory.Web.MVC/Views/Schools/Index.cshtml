@model IEnumerable<ULABInventory.Models.School>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Schools")" class="btn btn-warning">
        Create New
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
</p>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriorityLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedIp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedDate)
        </th>
        
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriorityLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostedIp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostedDate)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Schools", new {id = item.Id})" class="btn btn-info">
                Edit
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Details", "Schools", new {id = item.Id})" class="btn btn-primary">
                Details
                <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Delete", "Schools",new {id=item.Id})" class="btn btn-danger">
                Delete
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
           
        </td>
    </tr>
}

</table>
