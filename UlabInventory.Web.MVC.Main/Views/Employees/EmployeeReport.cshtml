                    @Html.ActionLink("Edit", "EditEmpDetails", new { id = item.Empid }) |
                    @Html.ActionLink("Delete", "DeleteEmp", new { id = item.Empid }, new { onclick = "return confirm('Are sure wants to delete?');" })
                </td>*@
