            @Html.DisplayNameFor(model => model.Department_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Program_Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.Employee_Id)
