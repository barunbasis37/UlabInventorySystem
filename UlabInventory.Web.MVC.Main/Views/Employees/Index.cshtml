@model IEnumerable<ULABInventory.Model.Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Employee ", "Create")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.Department.DepartmentShortCode)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentShortCode)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QueryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.QueryId }) |
            @if (User.IsInRole("Admin"))
            {
        
                @Html.ActionLink("Delete", "Delete", new {id = item.QueryId})
            }
            
        </td>
    </tr>
}

</table>
