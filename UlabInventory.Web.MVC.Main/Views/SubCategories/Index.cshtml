@model IEnumerable<ULABInventory.Model.SubCategory>

@{
    ViewBag.Title = "List of Subcategory";
}


<div class="row">
    <div class="col col-6">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="col col-6 text-right">
        <h5> @Html.ActionLink("Create New Subcategory", "Create")</h5>
    </div>
</div>

<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCatDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCatDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.QueryId }) |
                @Html.ActionLink("Details", "Details", new { id = item.QueryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.QueryId })
            </td>
        </tr>
    }

</table>
